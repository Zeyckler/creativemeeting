<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.0"
    xmlns="http://java.sun.com/xml/ns/javaee" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
    <managed-bean>
        <managed-bean-name>login</managed-bean-name>
        <managed-bean-class>beans.LoginBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
        
        <managed-bean-property> 
            <property-name>usuario</property-name>
            <property-class>java.lang.String</property-class>
            <value>#{LoginBean.usuario}</value>
        </managed-bean-property>
        <managed-bean-property> 
            <property-name>contrasena</property-name>
            <property-class>java.lang.String</property-class>
            <value>#{LoginBean.contrasena}</value>
        </managed-bean-property>
    </managed-bean>
    
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{login.compruebaLogin}</from-action>
            <from-outcome>ok</from-outcome>
            <to-view-id>/correcto.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{login.compruebaLogin}</from-action>
            <from-outcome>error</from-outcome>
            <to-view-id>/error.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <managed-bean>
        <description>Bean que almacena los datos del usuario</description>
        <managed-bean-name>usuario</managed-bean-name>
        <managed-bean-class>utiles.Usuario</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>holaBean</managed-bean-name>
        <managed-bean-class>beans.HolaBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>usuariosBean</managed-bean-name>
        <managed-bean-class>beans.UsuariosBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <application>
  <message-bundle>mensajeserror.erroresValidacion</message-bundle>
 </application>
</faces-config>

